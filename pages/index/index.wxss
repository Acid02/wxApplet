/**index.wxss**/
.item-app {
  display: flex;
  height: 124rpx;
  padding: 1% 2%;
  box-sizing: border-box;
}

.txtinput {
  flex: 5;
  border: 1px solid #F973A6;
  height: auto;
  font-size: 30rpx;
  padding-left: 10rpx;
}

.button-item {
  flex: 1;
  margin-left: 2% !important;
  background-color: #F973A6 !important;
  border-color: #F973A6 !important;
  color: #fff !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.media-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 1% 2%;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.media-list>view{
  width: 100%;
  margin-top: 3%;
}

.media-list>view>button{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
  background-color: #F973A6;
}
.media-list>view>video,.media-list>view>image{
  width: 100%;
}
.media-audio>image{
  width: 200rpx;
  height: 200rpx;
}

.progress{
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 99;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.progress-des{
  width: 100%;
  height: 10rpx;
  background-color: aliceblue;
}
.progress-des>view{
  background-color: greenyellow;
  width: 0%;
  height: 100%;
}
.progress-txt{
  margin-left: 20rpx;
}